<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    tools:context=".ActivitySearch">

    <RelativeLayout
        android:id="@+id/search_l00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_txt00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:foregroundGravity="center"
            android:text="H"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/search_sn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/search_txt00"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingRight="20dp" />

        <ImageButton
            android:id="@+id/search_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:text="Button"
            app:srcCompat="@drawable/ic_search" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/search_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_l00"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/search_lbl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="▲ Información"
                android:textColor="?heColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/search_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/search_lbl1"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/search_show"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hebreo"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search_heb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abba"
                    android:textColor="?heColor"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Transliteración"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search_trl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abba"
                    android:textColor="?heColor"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Definición"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search_def"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abba"
                    android:textColor="?heColor"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Categoría gramatical"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search_lmm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abba"
                    android:textColor="?heColor"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Forma Pictográfica"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/custom"
                    android:text="TISARB"
                    android:textColor="?heColor"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Origen"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search_org"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abba"
                    android:textColor="?heColor"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:text="Versículos relacionados"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/search_freq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frecuencia: "
                    android:textColor="?heColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/search_nver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Número de versos:"
                    android:textColor="?heColor"
                    android:textSize="18sp" />


            </LinearLayout>

            <ListView
                android:id="@+id/search_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/search_info">

            </ListView>

            <HorizontalScrollView
                android:id="@+id/search_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_recycler">

                <LinearLayout
                    android:id="@+id/btnLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/search_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_page"
                android:layout_marginBottom="10dp"
                android:text="Número de versos:"
                android:textColor="?heColor"
                android:textSize="18sp" />


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>