<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_read"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityRead">

    <LinearLayout
        android:id="@+id/read_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <Spinner
            android:id="@+id/sp_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.8"
            android:background="@drawable/sp_background"
            android:entries="@array/tanajBooks" />

        <Spinner
            android:id="@+id/sp_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/sp_background"
            android:entries="@array/tanajTestChap" />

        <Spinner
            android:id="@+id/sp_verse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/sp_background"
            android:entries="@array/tanajTestChap" />

        <ImageButton
            android:id="@+id/read_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@null"
            android:contentDescription="TODO"
            android:scaleType="center"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:tint="?heColor"
            app:srcCompat="@drawable/ic_search" />

        <ImageButton
            android:id="@+id/read_options"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@null"
            android:contentDescription="TODO"
            android:scaleType="center"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:tint="?heColor"
            app:srcCompat="@drawable/ic_more" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/read_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/read_title"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/read_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:contentDescription="TODO"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_play"
            app:tint="?fColor" />

        <SeekBar
            android:id="@+id/read_prog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignStart="@id/read_play"
            android:layout_alignLeft="@id/read_play"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/read_audio">

        <ImageButton
            android:id="@+id/read_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/read_vp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:tint="?heColor"
            app:srcCompat="@drawable/ic_back" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/read_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />

        <ImageButton
            android:id="@+id/read_next"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/read_vp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:tint="?heColor"
            app:srcCompat="@drawable/ic_next" />

    </RelativeLayout>

</RelativeLayout>